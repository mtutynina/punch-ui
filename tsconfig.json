{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "outDir": "out/",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "removeComments": false,
    "target": "es6",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "scripthost"
    ],
    "typeRoots": [ "./node_modules/@types"],
    "sourceRoot": ".",
    "baseUrl": ".",
    "rootDir": "."
  },
  "exclude": [
    "dist/index.d.ts",
    "node_modules",
    "wwwroot",
    "out/**/*.d.ts",
    "tests"
  ]
}
